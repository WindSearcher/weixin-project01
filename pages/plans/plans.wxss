/* pages/plans/plans.wxss */
.plan_manage{
        display: flex;
        justify-content: center;
}
.displan {
        justify-content: center;
        display: flex;
}
.plan_manage view{
        display: flex;
        
         
  justify-content: space-between;
  margin: 10rpx 40rpx;
  font-size: 26rpx;
  color: rgb(179, 172, 172);
}
image{
        width: 30px;
        height: 30px;
}
.delete{
        display: flex;
  justify-content: space-between;
  margin: 10rpx 40rpx;
  font-size: 26rpx;
  color: rgb(179, 172, 172);
}


.plan_title {
        font-size: 25px;
        color: darkorchid;
}
.plan_status {
        position: absolute;
        right: 5px;
}
.plan_section {
        width: 90%;
        height: 100%;
        margin-left: 5%;
        margin-top: 15px;
       border: 1rpx solid #e0e0e0;
border-radius: 10rpx;
box-shadow: 0 0 5rpx #e0e0e0;
}

.plan_index {
        position: relative;
        font-size: 15px;
        color: black;
}

.plan_content {
        padding-left: 15px;
        margin-top: 5px;
        font-size: 26rpx;
  color: rgb(179, 172, 172);
}

.plan_time {
        margin-top: 5px;
        margin-right: 10rpx;

        position: absolute;
        font-size: 10px;
        right: 0px;
        bottom: 5px;
}

.progress {
        text-align: center;
}

.porgress_title {
        color: deepskyblue;
}

.progress_value {
        color: red;
        font-size: 20px;
}

.selectDate {
        width: 100%;
        font-size: 14px;
        position: relative;
        bottom: 2px;
}

.picker {
        display: flex;
        align-items: center;
        justify-content: center;
}
.btn_last {
  color: white;
background-color: skyblue;

}
.title {
display: flex;
  justify-content: space-between;
  margin: 10rpx 40rpx;
  font-size: 25px;
  color: #777;
}
.footer {
  display: flex;
  justify-content: space-between;
  margin: 10rpx 40rpx;
  font-size: 26rpx;
  color: rgb(179, 172, 172);
}
.hidden_text {
   
    overflow : hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 1;
    -webkit-box-orient: vertical;
    word-break: break-all; /* 追加这一行代码 */
}
