/* pages/plans/plans.wxss */
.plan_manage{
        display: flex;
        justify-content: center;
}
.displan {
        justify-content: center;
        display: flex;
}
.plan_manage view{
        display: flex;
        justify-content: center
}
image{
        width: 30px;
        height: 30px;
}
.delete{
        color: red;
}


.plan_title {
        font-size: 25px;
        color: darkorchid;
}
.plan_status {
        position: absolute;
        right: 5px;
}
.plan_section {
        width: 90%;
        height: 100%;
        margin-left: 5%;
        margin-top: 15px;
        border: 1px dotted gray;
}

.plan_index {
        position: relative;
        font-size: 15px;
        color: black;
}

.plan_content {
        padding-left: 15px;
        margin-top: 5px;
        color: rgb(0, 89, 255);
        font-size: 13px;
}

.plan_time {
        margin-top: 5px;
        position: absolute;
        font-size: 10px;
        right: 0px;
        bottom: 5px;
}

.progress {
        text-align: center;
}

.porgress_title {
        color: deepskyblue;
}

.progress_value {
        color: red;
        font-size: 20px;
}

.selectDate {
        width: 100%;
        font-size: 14px;
        position: relative;
        bottom: 2px;
}

.picker {
        display: flex;
        align-items: center;
        justify-content: center;
}
