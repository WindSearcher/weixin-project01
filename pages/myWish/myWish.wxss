/* pages/myWish/myWish.wxss */

/* 为了移动端的自适应，采取rpx布局方式 */

.wish{
  width:43%;
  height:200px;
  float:left;
  color:black;
  padding:10rpx;
  margin-bottom:15rpx;
  margin-top:15rpx;
  box-sizing: border-box; 
  position:relative;
}
.wish:nth-of-type(odd){
  margin-left:25rpx;
}

.wish:nth-of-type(even){
  margin-left:50rpx; 
}


.wish .wish-img{
  width:30px;
  height:30px;
  vertical-align:middle;
  display:inline-block;

}

.wish .wish-txt{
   font-size:10px;
   display:inline-block;
   margin-left:20px;
}

/* 文字超出以省略号代替,点赞数 */
.wish .wish-content{
  width:41%;
  height:150px;
  margin-top:15px;
  font-size:15px;
  font-family: STKaiti;
  word-break:break-all;
  overflow:hidden;
  text-overflow:ellipsis;

}


.wish_delete{
  width: 40rpx;
  height: 40rpx;
  position:absolute;
  
}


.footer .img{
   width:40px;
   height:40px;
   position:fixed;
   right:20px;
   bottom:20px;
}

.previous .img{
  width:40px;
  height:40px;
   position:fixed;
   right:80%;
   bottom:20px;
}

.next .img{
  width:38px;
  height:38px;
   position:fixed;
   right:40%;
   bottom:20px;
}
