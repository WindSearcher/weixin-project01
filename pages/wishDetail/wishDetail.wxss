/* pages/wishDetail/wishDetail.wxss */

.liuyanview {
  width: 90%;
  margin: 10px auto;
}

.result {
  text-align: center;
  font-size: 14px;
  color: #f00;
  margin-top: 20px;
}

.headimg {
  width: 45px;
  height: 45px;
  border-radius: 100%;
}

.headimg image {
  width: 45px;
  height: 45px;
  border-radius: 100%;
}

.liuyantext {
  top: 20px;
  border: 0.1px solid skyblue;
  width: 100%;
  height: 200rpx;
  margin-bottom: 60rpx;
}

.btn {
  width: 88%;
  margin: 5px auto;
  color: skyblue;
}

.nickname_liuyantext {
  width: calc(100% - 55px);
  float: right;
  margin-top: -45px;
}

.nickname_liuyantext .nickname {
  font-size: 15px;
  color: #999;
}

.nickname_liuyantext .nickname .time {
  font-size: 11px;
  color: #999;
  float: right;
}

.nickname_liuyantext .text {
  font-size: 16px;
  color: #666;
}

.liuyan {
  margin-top: 100rpx;
}

.wish .wish-img {
  margin-top: 25rpx;
  margin-left: 100rpx;
  width: 60px;
  height: 60px;
  vertical-align: middle;
  display: inline-block;
}

.wish .wish-txt {
  margin-top: 25rpx;
  font-size: 20px;
  display: inline-block;
  margin-left: 50px;
}

.wish .wish-content {
  margin: 30rpx;
}
.bottom-content{
  font-size: 18px;
  margin-left: 250rpx;
}