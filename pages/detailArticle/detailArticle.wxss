.diary .content {
  margin-left: 30rpx;
  margin-top: 30rpx;
  margin-right:30rpx;
  font-size: 16px;
}

.diary .content text{
   font-family: STKaiti;
   /* word-wrap:break-word; */
   word-break:break-all;
}

.diary .sentiment {
  margin-bottom: 100rpx;
  margin-left: 30rpx;
