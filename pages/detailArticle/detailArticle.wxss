.diary .time {
  margin-left: 30rpx;
  margin-top: 30rpx;
  color: #ccc;
  font-size: 14px;
}

.diary .title {
  margin-left: 30rpx;
  margin-top: 30rpx;
  font-size: 25px;
  color: aqua;
  font-weight: bold;

}

