/*3*/

.rotate-disk-container {
        position: absolute;
        top: 0;
        left: 0;
        height: 100%;
        width: 100%;
        text-align: center;
}

.rotate-disk {
        position: absolute;
        top: 180rpx;
        left: 55rpx;
        width: 600rpx;
        height: 600rpx;
        border-radius: 600rpx;
        overflow: hidden;
        border: 20rpx solid rgba(54, 43, 41, 0.2);
}

.poster {
        width: 600rpx;
        height: 600rpx;
}

.rotate-360 {
        animation: rotate 10s linear infinite;
}

.rotate-360-paused {
        animation: rotate 10s linear infinite;
        animation-play-state: paused;
}

@keyframes rotate {
        0% {
                transform: rotate(0deg);
        }

        50% {
                transform: rotate(180deg);
        }

        100% {
                transform: rotate(360deg);
        }
}

