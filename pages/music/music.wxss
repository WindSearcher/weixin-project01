/**index.wxss**/

.container {
        height: 100%;
        overflow: hidden;
        width: 100%;
        position: absolute;
        top: 0;
        left: 0;
}

/*1*/

.bg {
        height: 100%;
        width: 100%;
}

.bg image {
        height: 100%;
        width: 100%;
        filter: blur(50rpx);
}

/*2*/

.bg-gray {
        position: absolute;
